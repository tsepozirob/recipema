# API Configuration
EXPO_PUBLIC_API_URL=http://localhost:3001
EXPO_PUBLIC_DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# RevenueCat (Subscription Management)
EXPO_PUBLIC_REVENUECAT_IOS_KEY=your_ios_revenuecat_key
EXPO_PUBLIC_REVENUECAT_ANDROID_KEY=your_android_revenuecat_key

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/recipema
REDIS_URL=redis://localhost:6379

# Apple App Store
APPLE_SHARED_SECRET=your_apple_shared_secret
APPLE_TEAM_ID=your_apple_team_id
APPLE_KEY_ID=your_apple_key_id
APPLE_PRIVATE_KEY_PATH=path/to/apple-private-key.p8

# Google Play Store
GOOGLE_SERVICE_ACCOUNT_JSON=path/to/google-service-account.json
GOOGLE_PACKAGE_NAME=com.recipema.app

# Security
JWT_SECRET=your_jwt_secret_key_minimum_32_characters
API_RATE_LIMIT_MAX=100
API_RATE_LIMIT_WINDOW=900000

# OCR Service (Optional - if using cloud OCR)
GOOGLE_VISION_API_KEY=your_google_vision_api_key
AZURE_COMPUTER_VISION_KEY=your_azure_cv_key
AZURE_COMPUTER_VISION_ENDPOINT=your_azure_cv_endpoint

# Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn
MIXPANEL_TOKEN=your_mixpanel_token

# Production Settings
NODE_ENV=development
PORT=3001
API_BASE_URL=https://api.recipema.com